<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/calculadora"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        >

    </ImageView>

    <TextView
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número 1"
        android:gravity="center"
    />

    <EditText
        android:id="@+id/txtValor1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="ingrese un numero"
        android:gravity="center"
        android:inputType="numberDecimal"
        />


    <TextView
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número 2"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/txtValor2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="ingrese un numero"
        android:gravity="center"
        android:inputType="numberDecimal"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$0"
        android:gravity="center"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:paddingBottom="15dp">

       <TextView
           android:layout_marginTop="20dp"
           android:textStyle="bold"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Formato de número"
           android:gravity="center"
           />

       <RadioGroup
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <RadioButton
               android:id="@+id/rbsi"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="Sí"></RadioButton>

           <RadioButton
               android:id="@+id/rbno"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="No"></RadioButton>
       </RadioGroup>
       <CheckBox
           android:id="@+id/cbiva"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:text="Incluye iva?"
           android:layout_gravity="center">

       </CheckBox>


   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <Button
            android:id="@+id/btnsumar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnrestar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="-"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnmultiplicar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="*"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btndividir"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="/"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnlimpiar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="Limpiar"
            android:textStyle="bold"
            />
    </LinearLayout>
        
        
</LinearLayout>
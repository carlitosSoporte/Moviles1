<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuario"
    android:orientation="vertical"
    android:id="@+id/contenedor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:gravity="center"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/etEmailUsuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="ingrese su Email"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:text="Nombre"
        android:gravity="center"/>
    <EditText
        android:id="@+id/etNombreUsuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="ingrese su nombre"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:gravity="center"/>
    <EditText
        android:id="@+id/etContraseñaUsuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="ingrese su Contraseña"/>

    <RadioGroup
        android:id="@+id/rgTipoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal">
        <RadioButton
            android:id="@+id/rbAdministrador"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="administrador"/>
        <RadioButton
            android:id="@+id/rbUsuario"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Usuario"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnAgregarUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:enabled="false"/>
    <Button
        android:id="@+id/btnBuscarUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btnActualizarUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/btnEliminarUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/btnListarUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listar"
        android:textAllCaps="false" />


</LinearLayout>